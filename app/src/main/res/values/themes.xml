<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FolkBluetoothCompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MidnightBlue</item>
        <item name="colorPrimaryVariant">@color/BlueViolet</item>
        <item name="colorOnPrimary">@color/Beige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkCyan</item>
        <item name="colorSecondaryVariant">@color/DarkKhaki</item>
        <item name="colorOnSecondary">@color/Beige</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Red</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FolkBluetoothCompanion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FolkBluetoothCompanion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FolkBluetoothCompanion.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>