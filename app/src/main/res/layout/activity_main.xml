<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@android:color/background_light"
        app:title="Bluetooth Connection"
        app:titleTextColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonConnect"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout_Values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10px"
                android:layout_marginEnd="10px">

                <TextView
                    android:id="@+id/textView_caption_Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Values"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#0277BD" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_speed_L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="SpeedF:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_speed_L_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        tools:text="Value" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border" />

                    <TextView
                        android:id="@+id/textView_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="SpeedB:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        android:visibility="visible"
                        tools:text="Value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_maxZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="Error:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_maxZone_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        tools:text="Value" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border" />

                    <TextView
                        android:id="@+id/textView_minZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="Elapsed Time:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_minZone_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        tools:text="Value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Angle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="PD:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_angle_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        tools:text="Value" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView_staatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="Status:"
                        android:textColor="#4A148C" />

                    <TextView
                        android:id="@+id/textView_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:textColor="#4A148C"
                        tools:text="Value" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10px"
                android:layout_marginTop="5px"
                android:layout_marginEnd="10px">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_P_Speed_F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="P:" />

                    <TextView
                        android:id="@+id/textView_P_value_Speed_F"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_I_Speed_F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="I:" />

                    <TextView
                        android:id="@+id/textView_I_value_Speed_F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_D_Speed_F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="D:" />

                    <TextView
                        android:id="@+id/textView_D_value_Speed_F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_P_Speed_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="P:" />

                    <TextView
                        android:id="@+id/textView_P_value_Speed_B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_I_Speed_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="I:" />

                    <TextView
                        android:id="@+id/textView_I_value_Speed_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_D_Speed_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="D:" />

                    <TextView
                        android:id="@+id/textView_D_value_Speed_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_P"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="P:" />

                    <TextView
                        android:id="@+id/textView_P_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_I"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="I:" />

                    <TextView
                        android:id="@+id/textView_I_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />

                    <TextView
                        android:id="@+id/textView_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        android:text="D:" />

                    <TextView
                        android:id="@+id/textView_D_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/border"
                        android:paddingStart="5px"
                        tools:text="Value" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_caption_Controls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:layout_weight="10"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:text="Controls"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#0277BD" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonPIDSwitch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="Front PID" />

                    <Button
                        android:id="@+id/button_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="Settings" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/controlls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_slider_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:gravity="center|center_vertical"
                        android:paddingStart="5px"
                        android:text="Speed:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:stepSize="0.01"
                        android:valueFrom="0"
                        android:valueTo="2.2"
                        android:visibility="visible" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_slider_P"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="P:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_P"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_slider_I"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="I:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_I"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_slider_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="D:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_max_PID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="Max:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_min_PID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="Min:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView_max_i"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5px"
                        android:text="MaxI:" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_max_i"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:visibility="visible" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_on_off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="ON"
                                app:iconPadding="10px" />

                            <Button
                                android:id="@+id/button_startup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="STARTUP" />

                            <Button
                                android:id="@+id/buttonClamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Console off" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button_startup_l"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="Startup l" />

                            <Button
                                android:id="@+id/button_startup_R"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="Startup r" />

                            <Button
                                android:id="@+id/buttonData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Data off" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="Serv. off" />

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:insetLeft="6dp"
                                android:insetRight="6dp"
                                android:text="Detach" />

                            <Button
                                android:id="@+id/buttonConsole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Console off" />
                        </TableRow>

                    </TableLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/lineChartLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_Values"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90"
            android:visibility="visible" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph1"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/radarChartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_Values"
        tools:visibility="gone">

        <com.enrih.folkbluetoothcompanion.common.LineChartCustom
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90"
            android:visibility="gone" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:visibility="visible" />
    </FrameLayout>

    <TableLayout
        android:id="@+id/Settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_Values">

